<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ghc.project.project.mapper.TbProjectMapper">

    <resultMap type="TbProject" id="TbProjectResult">
        <result property="projectId"    column="project_id"    />
        <result property="projectName"    column="project_name"    />
        <result property="projectType"    column="project_type"    />
        <result property="content"    column="content"    />
        <result property="description"    column="description"    />
        <result property="cost"    column="cost"    />
        <result property="days"    column="days"    />
        <result property="location"    column="location"    />
        <result property="organization"    column="organization"    />
        <result property="contacts"    column="contacts"    />
        <result property="contactWay"    column="contact_way"    />
        <result property="email"    column="email"    />
        <result property="addTime"    column="add_time"    />
        <result property="status"    column="status"    />
        <result property="userName" column="nick_name"/>
        <collection property="professionals" ofType="com.ghc.project.system.domain.SysDictData" javaType="List">
            <id     property="dictCode"   column="dict_code"   />
            <result property="dictLabel"  column="dict_label"  />
            <result property="dictValue"  column="dict_value"  />
            <result property="dictType"   column="dict_type"   />
            <result property="status"     column="dict_status"      />
        </collection>
    </resultMap>

    <sql id="selectTbProjectVo">
        select p.project_id, p.project_name, p.project_type, p.content, p.description, p.cost,
        p.days, p.location, p.organization, p.contacts, p.contact_way, p.email, p.add_time, p.status,u.nick_name,
        d.dict_code,d.dict_label,d.dict_value,d.dict_type,d.status as dict_status
        from tb_project p
        LEFT JOIN sys_user u
        on p.user_id = u.user_id
        left join tb_pro_relevance r
        on p.project_id = r.relevance_id AND r.relevance_type =1
        LEFT JOIN sys_dict_data d
        on r.pro_id = d.dict_code
    </sql>

    <select id="selectTbProjectList" parameterType="TbProject" resultMap="TbProjectResult">
        <include refid="selectTbProjectVo"/>
        <where>
            <if test="projectName != null  and projectName != ''"> and p.project_name like concat('%', #{projectName}, '%')</if>
            <if test="projectType != null  and projectType != ''"> and p.project_type = #{projectType}</if>
            <if test="content != null  and content != ''"> and p.content = #{content}</if>
            <if test="description != null  and description != ''"> and p.description = #{description}</if>
            <if test="cost != null  and cost != ''"> and p.cost = #{cost}</if>
            <if test="days != null "> and p.days = #{days}</if>
            <if test="location != null  and location != ''"> and p.location = #{location}</if>
            <if test="organization != null  and organization != ''"> and p.organization = #{organization}</if>
            <if test="contacts != null  and contacts != ''"> and p.contacts = #{contacts}</if>
            <if test="contactWay != null  and contactWay != ''"> and p.contact_way = #{contactWay}</if>
            <if test="email != null  and email != ''"> and p.email = #{email}</if>
            <if test="addTime != null "> and p.add_time = #{addTime}</if>
            <if test="status != null "> and p.status = #{status}</if>
        </where>
    </select>

    <select id="selectTbProjectById" parameterType="Long" resultMap="TbProjectResult">
        <include refid="selectTbProjectVo"/>
        where p.project_id = #{projectId}
    </select>

    <insert id="insertTbProject" parameterType="TbProject" useGeneratedKeys="true" keyProperty="projectId">
        insert into tb_project
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="projectName != null  and projectName != ''">project_name,</if>
            <if test="projectType != null  and projectType != ''">project_type,</if>
            <if test="content != null  and content != ''">content,</if>
            <if test="description != null  and description != ''">description,</if>
            <if test="cost != null  and cost != ''">cost,</if>
            <if test="days != null ">days,</if>
            <if test="location != null  and location != ''">location,</if>
            <if test="organization != null  and organization != ''">organization,</if>
            <if test="contacts != null  and contacts != ''">contacts,</if>
            <if test="contactWay != null  and contactWay != ''">contact_way,</if>
            <if test="email != null  and email != ''">email,</if>
            <if test="addTime != null ">add_time,</if>
            <if test="status != null ">status,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="projectName != null  and projectName != ''">#{projectName},</if>
            <if test="projectType != null  and projectType != ''">#{projectType},</if>
            <if test="content != null  and content != ''">#{content},</if>
            <if test="description != null  and description != ''">#{description},</if>
            <if test="cost != null  and cost != ''">#{cost},</if>
            <if test="days != null ">#{days},</if>
            <if test="location != null  and location != ''">#{location},</if>
            <if test="organization != null  and organization != ''">#{organization},</if>
            <if test="contacts != null  and contacts != ''">#{contacts},</if>
            <if test="contactWay != null  and contactWay != ''">#{contactWay},</if>
            <if test="email != null  and email != ''">#{email},</if>
            <if test="addTime != null ">#{addTime},</if>
            <if test="status != null ">#{status},</if>
        </trim>
    </insert>

    <update id="updateTbProject" parameterType="TbProject">
        update tb_project
        <trim prefix="SET" suffixOverrides=",">
            <if test="projectName != null  and projectName != ''">project_name = #{projectName},</if>
            <if test="projectType != null  and projectType != ''">project_type = #{projectType},</if>
            <if test="content != null  and content != ''">content = #{content},</if>
            <if test="description != null  and description != ''">description = #{description},</if>
            <if test="cost != null  and cost != ''">cost = #{cost},</if>
            <if test="days != null ">days = #{days},</if>
            <if test="location != null  and location != ''">location = #{location},</if>
            <if test="organization != null  and organization != ''">organization = #{organization},</if>
            <if test="contacts != null  and contacts != ''">contacts = #{contacts},</if>
            <if test="contactWay != null  and contactWay != ''">contact_way = #{contactWay},</if>
            <if test="email != null  and email != ''">email = #{email},</if>
            <if test="addTime != null ">add_time = #{addTime},</if>
            <if test="status != null ">status = #{status},</if>
        </trim>
        where project_id = #{projectId}
    </update>

    <delete id="deleteTbProjectById" parameterType="Long">
        delete from tb_project where project_id = #{projectId}
    </delete>

    <delete id="deleteTbProjectByIds" parameterType="String">
        delete from tb_project where project_id in
        <foreach item="projectId" collection="array" open="(" separator="," close=")">
            #{projectId}
        </foreach>
    </delete>

</mapper>